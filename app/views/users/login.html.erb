<h1>Login</h1>
<%= form_tag login_path do %>
<p class="right"> * Required fields <p>
  <div class="form-group">
    <%= label_tag :uid, "User ID" %><span class="error"> * </span><br>
    <%= text_field_tag :uid, params[:uid], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %><span class="error"> * </span><br>
    <%= password_field_tag :password_digest, nil, class: "form-control" %>
  </div>
<% if flash[:alert] %>
  <div class="error">
    <%= flash[:alert] %>
  </div>
<% end %>

  <%= submit_tag "Log In" %>
<% end %>


