 <h1>Forgot Password</h1>
 <%= form_tag forgot_path do %>

   <div class="form-group">
     <%= label_tag :email, "Enter Email" %><br>
     <%= text_field_tag :email, params[:email], class: "form-control" %>
   </div>
     <div class="error">
       <%= flash[:error] %>
     </div>

     <%= submit_tag "Submit" %>
   <% end %>